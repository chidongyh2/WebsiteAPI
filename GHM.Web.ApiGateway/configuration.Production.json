{
  "ReRoutes": [
    // BEGIN: Auth
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 50000
        }
      ],
      "UpstreamPathTemplate": "/auth/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "UseServiceDiscovery": false
    },
    // BEGIN: Events
    {
      "DownstreamPathTemplate": "/api/v{version}/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 50003
        }
      ],
      "UpstreamPathTemplate": "/api/v{version}/events/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "UseServiceDiscovery": false
    },
    // END: Events.
    // BEGIN: Core
    {
      "DownstreamPathTemplate": "/api/v{version}/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 50001
        }
      ],
      "UpstreamPathTemplate": "/api/v{version}/core/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Delete" ],
      "UseServiceDiscovery": false
    },
    // BEGIN: Website
    {
      "DownstreamPathTemplate": "/api/v{version}/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 50002
        }
      ],
      "UpstreamPathTemplate": "/api/v{version}/website/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Delete" ],
      "UseServiceDiscovery": false
    },
    // BEGIN: Product
    {
      "DownstreamPathTemplate": "/api/v{version}/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 50011
        }
      ],
      "UpstreamPathTemplate": "/api/v{version}/products/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "UseServiceDiscovery": false,
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "IdentityApiKey",
        "AllowedScopes": [ "GHM_Product_Api" ]
      }
    },
    // BEGIN: Notifications
    {
      "DownstreamPathTemplate": "/notifications",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 50004
        }
      ],
      "UpstreamPathTemplate": "/notifications",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "UseServiceDiscovery": false
    },
    // BEGIN: File manager
    {
      "DownstreamPathTemplate": "/api/v{version}/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 50005
        }
      ],
      "UpstreamPathTemplate": "/api/v{version}/files/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "UseServiceDiscovery": false,
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "IdentityApiKey",
        "AllowedScopes": [ "GHM_Core_Api" ]
      }
    }
  ],

  "GlobalConfiguration": {}
}
