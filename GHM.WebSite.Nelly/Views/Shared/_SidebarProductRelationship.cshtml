@{
    var listPoductRelationship = ViewBag.ListProductRelationShip as List<ProductSearchViewModel>;
    var url = ViewBag.Url;
}

@if (listPoductRelationship != null)
{
<div class="sidebar-product-relationship">
    <h3 class="title-sidebar">Sản phẩm nổi bật</h3>
    <ul class="list-products">
        @foreach(var product in listPoductRelationship){
        <li>
            <div class="media">
                <div class="media-left">
                    <a href="@($"/{product.SeoLink}.html")" Name="@(string.IsNullOrEmpty(product.Name) ? product.Name : product.Name)">
                        <img class="product-image img-responsive lazy" data-src="@($"/image?url={(string.IsNullOrEmpty(product.Thumbnail) ? "/images/no-image.png" : $"{url}{product.Thumbnail}")}&width=160&height=90")" onerror="this.onerror = null;this.src='/images/no-image.png'" alt="@(string.IsNullOrEmpty(product.Name) ? product.Name : product.Name)" />
                    </a>
                </div>
                <div class="media-body">
                    <div class="calendar">@product.LastUpdateTime?.ToString("dd/MM/yyyy")</div>
                    <a class="Name" href="@($"/{product.SeoLink}.html")" Name="@(string.IsNullOrEmpty(product.Name) ? product.Name : product.Name)">@Common.SubString(product.Name, 40)</a>
                </div>
            </div>
        </li>
        }
    </ul>    
</div>
}
