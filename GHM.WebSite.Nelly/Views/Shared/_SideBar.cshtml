@{
    var listSocialNetWork = ViewBag.SocialNetwork as List<SocialNetworkViewModel>
    ;
}

<ul class="layout_sidebar">
    <li class="">
        <div class="item-left">
            <a href="javascript://" data-toggle="tooltip" title="Mạng lưới Nellydevusyst">
                <img src="~/images/facion/address.png" class="lazy"/>
                @*<i class="la la-street-view"> </i>*@
            </a>
        </div>
        <div class="item-right">
            <a href="javascript://" data-toggle="tooltip" title="Mạng lưới Nellydevusyst"><span> Mạng lưới Nellydevusyst</span></a>
        </div>
    </li>
    <li>
        <div class="item-left">
            <a href="javascript://" data-toggle="tooltip" title="Giỏ hàng">
                <img src="~/images/facion/giohang.png" class="lazy"/>
                @*<i class="la la-shopping-cart"> </i>*@
            </a>
        </div>
        <div class="item-right">
            <a href="javascript://" data-toggle="tooltip" title=" Giỏ hàng"><span> Giỏ hàng</span></a>
        </div>
    </li>
    <li>
        <div class="item-left">
            <a href="javascript://" data-toggle="tooltip" title="Trở thành đại lý">
                @*<i class="la la-users"> </i>*@
                <img src="~/images/facion/branch.png" class="lazy"/>
            </a>
        </div>
        <div class="item-right">
            <a href="javascript://" data-toggle="tooltip" title="Trở thành đại lý"><span> Trở thành đại lý</span></a>
        </div>
    </li>
    <li>
        <div class="item-left">
            <a href="javascript://" data-toggle="tooltip" title="Liên hệ">
                <img src="~/images/facion/contact.png" class="lazy"/>
                @*<i class="la la-asterisk"> </i>*@               
            </a>
        </div>
        <div class="item-right">
            <a href="javascript://" data-toggle="tooltip" title="Liên hệ"><span> Liên hệ</span></a>
            <ul class="list-inline">
                @if (listSocialNetWork != null && listSocialNetWork.Any())
                {
                    @foreach (var socialNetwork in listSocialNetWork)
                    {
                        <li class="list-items">
                            <a href="@socialNetwork.Url">
                                @if (!string.IsNullOrEmpty(socialNetwork.Icon))
                                {
                                    <i class="fa @(socialNetwork.Icon)"></i>
                                }
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>
    </li>
</ul>
