@model CategoryWidthNewsViewModel
@{
    var menuMiddle = ViewBag.MenuMiddle as MenuDetailViewModel;
    var url = ViewBag.Url;
    var device = ViewBag.Device;
}

@if (Model != null)
{
    <div id="news-in-homepage">
        <div class="heading">
            <div class="container">
                <div class="row">
                    <partial name="_TitleBar" model="Model.CategoryName" />
                </div>
            </div>
        </div>
        <div class="container">
            @{
                var listNews = Model.ListNews.Take(3);
                <div class="row content">
                    @foreach (var news in listNews)
                    {
                        <div class="col-sm-4">
                            <partial name="_NewsItem" model="news" />
                        </div>
                    }
                </div>
            }
        </div>
    </div>
}