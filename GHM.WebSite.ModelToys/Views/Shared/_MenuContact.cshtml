@{
    var menuContact = ViewBag.MenuContact as MenuDetailViewModel;
}

@if (menuContact != null)
{
    <div id="menu-middle">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <partial name="_TitleBar" model="menuContact?.Name" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div id="menuMiddlerSlider">
                        @foreach (var item in menuContact.MenuItems)
                        {
                            <div class="menu-item">
                                <div class="logo">
                                    <a title="@item.Name">
                                        <img class="img-responsive" alt="@item.Name" data-src="@($"{(string.IsNullOrEmpty(item.Image) ? "/images/no-image.png" : $"/image?url={ViewBag.Url}{item.Image}")}")" />
                                    </a>
                                </div>
                                <div class="menu-name">
                                    <a class="transition" title="@item.Name">
                                        @item.Name
                                    </a>
                                    <div class="description ">
                                        @Common.SubString(item.Description, ViewBag.DeviceType == "desktop" ? 70 : 50)
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}