<link href="~/css/less/help-finder.min.css" rel="stylesheet" />
<div id="caf-form-row" class="vc_row wpb_row vc_row-fluid caf-form-row">
    <div class="caf-form-col wpb_column vc_column_container vc_col-sm-6" id="caf-form-col">
        <div class="vc_column-inner">
            <div class="wpb_wrapper">
                <div class="wpb_text_column wpb_content_element  desktop-only hidden-xs hidden-md hidden-sm">
                    <div class="wpb_wrapper wrap-text">
                        <h2>YOUR ONLINE COLOR FINDER</h2>
                        <div class="divider"></div>
                        <p>
                            Simply fill in the details to get the right shade for any skin type
                            in seconds.
                        </p>
                    </div>
                </div>
                <div class="wpb_text_column wpb_content_element ">
                    <div class="wpb_wrapper wrapper-form">
                        <div class="spacer" style="height:20px"></div>
                        <div id="color-advice-form-wrapper">
                            <div class="caf-form-toggle">
                                <span class="caf-form-toggle-text-hide">Hide selection</span>
                            </div>
                            <form>
                                <p id="caf-fieldset-select-headline">COLOR LINE</p>
                                <fieldset class="caf-fieldset-" id="caf-fieldset-line">
                                    <div class="caf-fieldset-col">
                                        <div class="caf-input-wrapper">
                                            <input id="radio-el"
                                                   data-num="0" name="line"
                                                   class="caf-radiobutton caf-input"
                                                   type="radio"><label for="radio-el">
                                                <span class="caf-input-wrapper-label-1">Evolutionline</span><br>hairstrokes
                                                & powdery
                                            </label>
                                            <div class="check">
                                                <div class="inside"></div>
                                            </div><br>
                                        </div>
                                        <div class="caf-input-wrapper">
                                            <input id="radio-ol1"
                                                   data-num="1" name="line"
                                                   class="caf-radiobutton caf-input"
                                                   type="radio"><label for="radio-ol1">
                                                <span class="caf-input-wrapper-label-1">Organicline</span><br>hairstrokes
                                            </label>
                                            <div class="check">
                                                <div class="inside"></div>
                                            </div><br>
                                        </div>
                                    </div>
                                    <div class="caf-fieldset-col">
                                        <div class="caf-input-wrapper">
                                            <input id="radio-ol2"
                                                   data-num="2" name="line"
                                                   class="caf-radiobutton caf-input"
                                                   type="radio"><label for="radio-ol2">
                                                <span class="caf-input-wrapper-label-1">Organicline</span><br>powdery
                                            </label>
                                            <div class="check">
                                                <div class="inside"></div>
                                            </div><br>
                                        </div>
                                        <div class="caf-input-wrapper">
                                            <input id="radio-ol3"
                                                   data-num="3" name="line"
                                                   class="caf-radiobutton caf-input"
                                                   type="radio"><label for="radio-ol3">
                                                <span class="caf-input-wrapper-label-1">Organicline</span><br>lips
                                            </label>
                                            <div class="check">
                                                <div class="inside"></div>
                                            </div><br>
                                        </div>
                                    </div>
                                </fieldset>
                                <p id="caf-fieldset-0-headline">SKIN TYPE</p>
                                <fieldset class="caf-fieldset" id="caf-fieldset-0">
                                    <div class="caf-fieldset-col">
                                        <div class="caf-input-wrapper">
                                            <input id="radio-ne"
                                                   data-num="0" name="skin_type"
                                                   class="caf-radiobutton caf-input"
                                                   type="radio"><label for="radio-ne">
                                                <span class="caf-input-wrapper-label-1">
                                                    Northern
                                                    European
                                                </span> / ivory-white skin, many
                                                freckles
                                            </label>
                                            <div class="check">
                                                <div class="inside"></div>
                                            </div><br>
                                        </div>
                                        <div class="caf-input-wrapper">
                                            <input id="radio-nordic"
                                                   data-num="1" name="skin_type"
                                                   class="caf-radiobutton caf-input"
                                                   type="radio"><label for="radio-nordic">
                                                <span class="caf-input-wrapper-label-1">Nordic</span>
                                                / fair or pale skin, several freckles
                                            </label>
                                            <div class="check">
                                                <div class="inside"></div>
                                            </div><br>
                                        </div>
                                        <div class="caf-input-wrapper">
                                            <input id="radio-european" data-num="2"
                                                   name="skin_type"
                                                   class="caf-radiobutton caf-input"
                                                   type="radio"><label for="radio-european">
                                                <span class="caf-input-wrapper-label-1">European</span>
