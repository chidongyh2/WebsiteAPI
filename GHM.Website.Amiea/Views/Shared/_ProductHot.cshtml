@model List<NewsSearchViewModel>
@if (Model != null && Model.Any())
{
    <div id="product-hot">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h2 class="titlebar">Sản phẩm nổi bật của Amiea</h2>
                </div>
            </div>
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-sm-3 cm-mgb-20">
                        <partial name="_ProductHotItem" model="product"/>
                    </div>
                }
            </div>
        </div>
    </div>
}
