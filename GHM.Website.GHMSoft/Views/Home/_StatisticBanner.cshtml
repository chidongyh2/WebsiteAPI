@{
    var listvalue = ViewBag.Listvalue as List<ValueViewModel>;
}

<div id="statistic_banner" style="background-position: 50% 59px;">
    <div class="container">
        @if (listvalue != null && listvalue.Any()){
        <div id="statistic-holder" class="row">
            @foreach (var list in listvalue)
            {
            <div class="col-sm-4 col-md-4 statistic-block animated bounceIn visible" data-animation="bounceIn">
                <div class="statistic-number">@list.Description</div>
                <div class="statistic-text">@list.Title</div>
            </div>           
            }
        </div>
        }
    </div>
</div>