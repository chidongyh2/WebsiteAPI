
@{
    var breadcrumbs = ViewBag.Breadcrumb as List<Breadcrumb>;
}

<div class="header">
    <img src="@($"/image?url={ViewBag.Url}{ViewBag.ImageBanner}")" class="img-responsive" onerror="this.src='/images/bannerNews.jpg'"/>
    <div class="breadcrumb">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-inline">
                        <li class="list-items">
                            <a href="/">@Resource.Home</a>
                        </li>
                        @if (breadcrumbs != null && breadcrumbs.Any())
                        {
                            foreach (var item in breadcrumbs)
                            {
                                <li class="list-items">
                                    @if (item.IsCurrent)
                                    {
                                        <span>@item.Name</span>
                                    }
                                    else
                                    {
                                        <a href="/@string.Format("{0}", string.IsNullOrEmpty(item.Url) ? item.NamePath : item.Url)">@item.Name</a>
                                    }
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

