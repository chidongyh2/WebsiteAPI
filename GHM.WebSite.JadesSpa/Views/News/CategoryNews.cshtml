@model CategoryWidthNewsViewModel;
@{
    var CategoryWidthNews = Model;
    ViewBag.Title = CategoryWidthNews.CategoryName;
    ViewBag.ImageBanner = CategoryWidthNews.BannerImage;
    var totalRows = CategoryWidthNews.TotalRows ?? 0;
    var pageSize = 12;
    var page = ViewBag.Page;
    var totalPage = Math.Ceiling((double)totalRows / pageSize);
    var seoLink = CategoryWidthNews.SeoLink;
}
<partial name="_Breadcumb">
    <div id="category-news">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 center">
                    <h2 class="titlebar">@CategoryWidthNews.CategoryName</h2>
                    <hr />
                </div>
                @foreach (var news in CategoryWidthNews.ListNews)
                {
                    <div class="col-sm-4 col-xs-6">
                        <partial name="_NewsItem" model="news" />
                    </div>
                }
            </div>
            <div class="row">
                <div class="col-sm-12 center">
                    <ul class="pagination">
                        @if (totalPage > 1)
                        {
                            <li>
                                <a class="@(page == 1 ? "disabled" : "")" href="@(page > 1 ? string.Format("/{0}/{1}/{2}", seoLink, 1, pageSize) : "javascript://")">
                                    <i class="fa fa-angle-double-left"></i>
                                </a>
                            </li>
                            @for (var i = 1; i <= totalPage; i++)
                            {
                                <li><a class="@(page == i ? "active" : "")" href="@(string.Format("/{0}/{1}/{2}", seoLink, i, pageSize))">@i</a></li>
                            }
                            <li>
                                <a class="@(page == totalPage ? "disabled" : "")" href="@(page < totalPage ? string.Format("/{0}/{1}/{2}", seoLink, totalPage, pageSize) : "javascript://")">
                                    <i class="fa fa-angle-double-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

