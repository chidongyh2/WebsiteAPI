@{
    var categoryWidthNews = ViewBag.CategoryMiddle as CategoryWidthNewsViewModel;
}
<div id="news-introduce" class="lazy" data-src="/images/bgr-web/background-image/nen-pc_06.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="center titlebar">
                    @categoryWidthNews?.CategoryName
                </div>
                <div class="descriptionbar">"@($"{categoryWidthNews?.Description}")"</div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                @if (ViewBag.DeviceType == "desktop")
                {
                    <div id="middle-menu-slide" class="hidden-xs hidden-sm hidden-md">
                        @if (categoryWidthNews?.ListNews != null && categoryWidthNews.ListNews.Any())
                        {
                            @foreach (var item in categoryWidthNews.ListNews)
                            {
                                <div class="item">
                                    <div class="wrap-image zoom">
                                        <a href="@($"{item.SeoLink}.html")">
                                            @*<img class="news-image img-responsive lazy"
                                                 data-src="@($"/image?url={(string.IsNullOrEmpty(item.FeatureImage) ? "/images/no-image.png" : $"{ViewBag.Url}{item.FeatureImage}")}&width=270&height=270")" alt="" \
                                                 onerror="this.src='/images/no-image.png'" />*@

                                            <img class="news-image img-responsive" src="@(string.IsNullOrEmpty(item.FeatureImage) ? "/images/no-image.png" : $"{ViewBag.Url}{item.FeatureImage}")"
                                                 onerror="this.src='/images/no-image.png'" alt="" />
                                        </a>
                                    </div>
                                    <div class="wrap-text">
                                        <a href="@($"{item.SeoLink}.html")">@item.Title</a>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                }
            </div>
        </div>
    </div>
    @if (ViewBag.DeviceType != "desktop")
    {
        <div id="wrap-item" class="wrap-item visible-xs visible-sm visible-md">
            <div class="container">
                <div class="row">
                    @if (categoryWidthNews?.ListNews != null && categoryWidthNews.ListNews.Any())
                    {
                        var i = 1;
                        @foreach (var item in categoryWidthNews.ListNews)
                        {
                            <div class="@(i % 2 == 0 ? "even col-lg-3 col-sm-6 col-xs-6 col-md-6" : "odd col-lg-3 col-sm-6 col-xs-6 col-md-6")">
                                <div class="item">
                                    <div class="wrap-image">
                                        <a href="@($"{item.SeoLink}.html")">
                                            @*<img class="news-image zoom img-responsive lazy" onerror="this.src='/images/no-image.png'"
                                                 data-src="@($"/image?url={(string.IsNullOrEmpty(item.FeatureImage) ? "/images/no-image.png" : $"{ViewBag.Url}{item.FeatureImage}")}")" alt="" />*@

                                            <img class="news-image zoom img-responsive" src="@(string.IsNullOrEmpty(item.FeatureImage) ? "/images/no-image.png" : $"{ViewBag.Url}{item.FeatureImage}")"
                                                 onerror="this.src='/images/no-image.png'" alt="" />
                                        </a>
                                    </div>
                                    <div class="wrap-text">
                                        <a href="@($"{item.SeoLink}.html")">@item.Title</a>
                                    </div>
                                </div>
                            </div>
                            i++;
                        }
                    }
                </div>
            </div>
        </div>
    }
</div>